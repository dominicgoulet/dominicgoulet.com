<%= form_for [:admin, @article] do |f| %>
  <div class="w-1/2 mb-4">
    <%= f.label :title, class: 'block text-sm font-medium leading-6 text-gray-900' %>

    <div class="relative mt-2">
      <%= f.text_field :title, autofocus: true, class: 'peer block w-full border-0 bg-gray-50 py-1.5 text-gray-900 focus:ring-0 sm:text-sm sm:leading-6' %>
      <div class="absolute inset-x-0 bottom-0 border-t border-gray-300 peer-focus:border-t-2 peer-focus:border-indigo-600" aria-hidden="true"></div>
    </div>
  </div>

  <div class="w-1/2 mb-4">
    <%= f.label :slug, class: 'block text-sm font-medium leading-6 text-gray-900' %>

    <div class="relative mt-2">
      <%= f.text_field :slug, autofocus: true, class: 'peer block w-full border-0 bg-gray-50 py-1.5 text-gray-900 focus:ring-0 sm:text-sm sm:leading-6' %>
      <div class="absolute inset-x-0 bottom-0 border-t border-gray-300 peer-focus:border-t-2 peer-focus:border-indigo-600" aria-hidden="true"></div>
    </div>
  </div>

  <div class="w-1/4 mb-4">
    <%= f.label :published_on, class: 'block text-sm font-medium leading-6 text-gray-900' %>

    <div class="relative mt-2">
      <%= f.date_field :published_on, autofocus: true, class: 'peer block w-full border-0 bg-gray-50 py-1.5 text-gray-900 focus:ring-0 sm:text-sm sm:leading-6' %>
      <div class="absolute inset-x-0 bottom-0 border-t border-gray-300 peer-focus:border-t-2 peer-focus:border-indigo-600" aria-hidden="true"></div>
    </div>
  </div>

  <div class="w-1/4 mb-4">
    <%= f.label :labels, class: 'block text-sm font-medium leading-6 text-gray-900' %>

    <%= f.collection_check_boxes :label_ids, Label.all, :id, :name do |b| %>
      <div class="flex items-center">
        <%= b.check_box(class: 'peer h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded') %>
        <%= b.label class: 'ml-3 block text-sm font-medium text-gray-700' %>
      </div>
    <% end %>
  </div>

  <div class="w-full mb-4">
    <%= f.label :body, class: 'block text-sm font-medium leading-6 text-gray-900' %>

    <div class="relative mt-2">
      <%= f.rich_text_area :body, autofocus: true, class: 'h-48 peer block w-full border-0 bg-gray-50 py-1.5 text-gray-900 focus:ring-0 sm:text-sm sm:leading-6' %>
      <div class="absolute inset-x-0 bottom-0 border-t border-gray-300 peer-focus:border-t-2 peer-focus:border-indigo-600" aria-hidden="true"></div>
    </div>
  </div>

  <div class="flex gap-8 items-center">
    <%= f.submit class: 'rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer' %>
    <%= link_to 'Cancel', admin_articles_path, class: 'rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
  </div>
<% end %>
